ScreenManager:
    Welcome:
        id: welcome
    Login:
        id: login
    SignIn:
        id: signin

    SignUp:
        id: signup

    MainMenu:
        id: menu
    NewOrder:
        id: neworder
    PreviousOrder:
        id:previousorders
    Recommendation:
        id:recommendation


<Welcome>:
    BoxLayout:
        AnchorLayout:
            anchor_y: 'top'
            MDToolbar:
                id: toolbar
                title: 'Healthy Living'
                md_bg_color: app.theme_cls.accent_color
                background_palette: 'Primary'
                background_hue: '500'
                left_action_items: [[ 'menu' , lambda x: app.toggle_nav_drawer()]]
                right_action_items: [["dots-vertical", lambda x: app.callback()]]
    MDCard:
        background: 'Pictures/healthy-food.jpg'
        bg: app.theme_cls.bg_light
        size: 300,400
        pos_hint: {"center_x": .5, "center_y": .5}
        elevation:10
        padding:25
        spacing:25
        orientation:'vertical'


        MDLabel:
            id:welcome_label
            text:'Welcome to Healthy Living'
            theme_text_color: "Custom"
            text_color: .13,.55,.13,1
            font_size: 40
            halign:'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
            markup: True
        MDFillRoundFlatButton:
            id: welcome_btn
            text: "Enter"
            font_size:12
            pos_hint: {'center_x': .5}
            on_release:
                app.root.current = 'Login'
        Widget:
            size_hint_y: None
            height:20
        Widget:
            size_hint_y: None
            height:20
    BoxLayout:
        AnchorLayout:
            anchor_y: 'bottom'
            MDToolbar:
                id: toolbar

                title: '© Healthy living 2021'
                md_bg_color: app.theme_cls.accent_color
                background_palette: 'Primary'
                background_hue: '500'

<Login>:
    name: 'Login'
    id:login
    BoxLayout:
        AnchorLayout:
            anchor_y: 'top'
            MDToolbar:
                id: toolbar
                title: 'Healthy Living'
                md_bg_color: app.theme_cls.accent_color
                background_palette: 'Primary'
                background_hue: '500'
                left_action_items: [[ 'menu' , lambda x: app.toggle_nav_drawer()]]
                right_action_items: [["dots-vertical", lambda x: app.callback()]]
    MDCard:
        background: 'Pictures/healthy-food.jpg'
        size: 300,400
        pos_hint: {"center_x": .5, "center_y": .5}
        elevation:10
        padding:25
        spacing:25
        orientation:'vertical'


        MDLabel:
            id:welcome_label
            text:'Welcome'
            theme_text_color: "Custom"
            text_color: .13,.55,.13,1
            font_size: 40
            halign:'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
            markup: True


        MDTextFieldRound:
            id:user
            normal_color: app.theme_cls.accent_color
            color_active: 1,1,1,1
            hint_text: 'User ID'
            theme_text_color: .13,.55,.13,1
            helper_text: "Username"
            helper_text_mode:'on_focus'
            icon_right: 'account'
            size_hint_x: None
            width:200
            font_size: 18
            pos_hint: {"center_x": .5}

            focus: True
            on_text_validate: password.focus = True


        MDTextFieldRound:
            color_mode: 'accent'
            id: password
            md_bg_color: [0,0,0,0]
            normal_color: app.theme_cls.accent_color
            color_active: 1,1,1,1

            hint_text:'Password'
            icon_right:'eye-off'
            size_hint_x: None
            theme_text_color: "custom"
            text_color: 1,1,1,1
            width:200
            font_size:18
            pos_hint: {'center_x': .5}
            password: True
            multiline: False
            on_text_validate:
                root.validate_user()


        MDFillRoundFlatButton:
            id: login
            text: "Login"
            font_size:12
            pos_hint: {'center_x': .5}
            on_release:
                root.validate_user()


        MDFillRoundFlatButton:
            id: 'signup'
            text: "Signup"
            font_size:12
            pos_hint: {'center_x': .5}
            on_release:
                root.manager.transition.direction = 'left'
                app.root.current = 'SignUp'

        Widget:
            size_hint_y: None
            height:20
    BoxLayout:
        AnchorLayout:
            anchor_y: 'bottom'
            MDToolbar:
                id: toolbar
                halign:'center'
                title: '© Healthy living 2021'
                md_bg_color: app.theme_cls.accent_color
                background_palette: 'Primary'
                background_hue: '500'



